                    </TreeViewItem>
                </TreeViewItem>-->
            </TreeView>

        </StackPanel>

        <ContentControl Content="{Binding SelectedControl}" Grid.Column="1"></ContentControl>

    </Grid>
    </materialDesign:DialogHost>
</Window>
